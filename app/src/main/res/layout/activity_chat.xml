<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"

        android:onClick="discoverPeers"
        android:text="Discover Peers" />

    <Button
        android:id="@+id/button4"
        android:layout_width="106dp"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|center_horizontal"
        android:onClick="requestPeers"
        android:text="Request Peers" />

    <Button
        android:id="@+id/button6"
        android:layout_width="122dp"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|right"
        android:onClick="updateNodeList"
        android:text="Check Node List" />

    <TextView
        android:id="@+id/NodeListTextView"
        android:layout_width="192dp"
        android:layout_height="248dp"

        android:layout_gravity="top|right"
        android:text="TextView" />

    <TextView
        android:id="@+id/peerView"
        android:layout_width="184dp"
        android:layout_height="249dp"

        android:layout_gravity="top|left"
        android:text="TextView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="attemptSend"
        android:text="Attempt Send"
        android:layout_gravity="center_horizontal|center_vertical"
        />

</FrameLayout>